<div class="form-card">
  <div class="card">
    <div class="card-body">
      <h6 class="mb-3 mt-2 text-center"><%= yield(:subtitle) %></h6>
      <p class="text-muted"><%= fa_icon("user-circle") %>
        <%= current_user.username %>
      <p>
      <%= form_with(model: @post, local: true) do |f| %>
        <%= f.file_field :image, accept: "image/jpeg,image/png", required: true %>
        <%= f.text_area :caption, placeholder: "Write a caption...", class: "form-control", rows:9 %>
        <%= f.submit yield(:button), class: "w-100 btn btn-primary" %>
        <%= render 'shared/error_messages', object: f.object %>
      <% end %>
    </div>
  </div>
</div>
